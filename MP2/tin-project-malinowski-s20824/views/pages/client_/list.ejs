<%- include('../../fragment/header.ejs') %>

    <main>
        <h2>Client list</h2>
        <table class="table-list">
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>E-mail</th>
                    <th>Company</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% for (let client of clients) { %>
                <tr>
                    <td><%= client.firstName %></td>
                    <td><%= client.lastName %></td>
                    <td><%= client.email %></td>
                    <td><%= client.company %></td>
                    <td>
                        <ul class="list-actions">
                            <li>
                                <a href="/clients/details/<%= client.clientId %>" class="list-actions-button-details">Details</a>
                            </li>
                            <li>
                                <a href="/clients/edit/<%= client.clientId %>" class="list-actions-button-edit">Edit</a>
                            </li>
                            <li>
                                <a href="/clients/delete/<%= client.clientId %>" class="list-actions-button-delete">Delete</a>
                            </li>
                        </ul>
                    </td>
                </tr>
                <% } %>
            </tbody>
        </table>

        <p><a href="/clients/add" class="button-add">Add new client</a></p>
    </main>
</body>

<%- include('../../fragment/footer.ejs') %>